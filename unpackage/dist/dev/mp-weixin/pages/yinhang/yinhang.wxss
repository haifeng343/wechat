.list .item {
  width: 100%;
  height: 250rpx;
  border-radius: 8rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 40rpx 30rpx;
  color: #fff;
  background-color: #3F536E;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
