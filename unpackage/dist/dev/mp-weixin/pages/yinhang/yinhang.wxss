  width: 60rpx;
  height: 60rpx;
  border: 10rpx solid #f1f1f1;
  border-radius: 100%;
}
.list .item .item-top .item-top-title {
  font-size: 30rpx;
}
.list .item .item-top .item-top-txt {
  font-size: 24rpx;
}
.list .item .item-bottom {
